{% set cityIntro = collections.cityIntro[0] %}

<div class="img-container" id="city-img">
        <img src="{{ cityIntro.data.image }}" alt="{{ cityIntro.data.imageAlt }}">
</div>

<div class="sbs-container" id="city-info">
    <h1>{{ cityIntro.data.title }}</h1>
    <p>{{ cityIntro.data.paragraph }}</p>
    <a href={{ cityIntro.data.cityLink}}><button class="sbs-btn">{{ cityIntro.data.buttonText }}</button></a>
</div>